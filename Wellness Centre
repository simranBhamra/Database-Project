--drop tables 
drop table staff cascade constraints;
drop table physician cascade constraints;
drop table rNurse cascade constraints;
drop table nPract cascade constraints;
drop table medTech cascade constraints;
drop table pharma cascade constraints;
drop table surgeon cascade constraints;
drop table recept cascade constraints; 
drop table bookKeeper cascade constraints;
drop table officeAdmin cascade constraints;
drop table patient cascade constraints;
drop table diagnosis cascade constraints;
drop table visit cascade constraints;
drop table bill cascade constraints;
drop table prescrip cascade constraints;
drop table sched cascade constraints;
drop table staffSched cascade constraints;
drop table patientSched cascade constraints;

--creating staff table
create table 'staff' table (
    staffID         varchar(6)  not null constraint staff_pk primary key, 
    staffType       char(3)     not null contraint staff_type
); 

--create physicial table 
create table 'physician' table(
    doctorLicNum        number(10)  not null constraint physician_pk primary key,
    staffID             char(3) 
);

--create registed nurse table
create table 'rNurse' table (
    rLicNum         number(10) not null constraint rLicNum_pk primary key,
    staffID             char(3)
);

--create nurse practitioner table 
create table 'nPract' table(
    practID     number(10) not null constraint practID_pk primary key,
    staffID             char(3)
);

--create medical techninican table 
create table 'medTech' table(
    medTechLicNum       number(10) not null constraint medTechLicNum_pk primary key,
    staffID             char(3)
);

--create pharamcist table 
create table 'pharma' table(
    pharmaId            number(10) not null constraint pharmaID_pk primary key,
    staffID             char(3)
); 

--create registed nurse table
create table 'rNurse' table (
    rLicNum         number(10) not null constraint rLicNum_pk primary key,
    staffID             char(3)
);

--create nurse practitioner table 
create table 'nPract' table(
    practID     number(10) not null constraint practID_pk primary key,
    staffID             char(3)
);

--create medical techninican table 
create table 'medTech' table(
    medTechLicNum       number(10) not null constraint medTechLicNum_pk primary key,
    staffID             char(3)
);

--create pharamcist table 
create table 'pharma' table(
    pharmaId            number(10) not null constraint pharmaID_pk primary key,
    staffID             char(3)
); 


--create surgeon table 
create table 'surgeon' table(
    surgeonID       number(10) not null constraint surgeon_pk primary key,
     staffID             char(3)
);


--create recept table 
create table 'recept' table(
    receptID      number(10) not null constraint recept_pk primary key,
     staffID             char(3)
);


--create book keeper table 
create table 'bookKeeper' table (
    bookKeeperID        number(10) not null constraint bookKeeper_pk primary key,
     staffID             char(3)
);

--create office admin table 
create table 'officeAdmin' table(
    officeAdminID       number(10) not null constraint officeAdmin_pk primary key,
     staffID             char(3)
); 

--create patient table 
create table 'patient' table (
    patientID   varchar(6) not null constraint patient_pk primary key,
    abilityToPay    char(3) --come back to constraints
);

--create diagnosis table 
create table 'diagnosis' table(
    diagnosisID     varchar(6) not null constraint diagnosis_pk primary key,
    description     varchar(5) not null constraint --come back to others
);

--create visit table 
create table 'visit' table(
    visitID         varchar(6)  not null constraint, visit_pk primary key,
    visitType       varchar(20) ,
    diagnosisID     varchar(6) diagnosis_fk foreign key,
    patientID       varchar(6) patient_fk foreign key,
    docLicNum       number(10) docLicNum_fk foreign key
);

--create billing table 
create table 'billing' table(
    billingID       varchar(10) billing_pk primary key,
    amount          number(7,2) not null constraint,
    payTime         date time,
    payType         char(3) --come back to this
    patientID       varchar(6) patient_fk foreign key,
    bookKeeperID    varchar(6) bookKeeper_fk foreign key

);

--create prescrip table
create table 'prescrip' table(
    patientID       varchar(6) patient_fk foreign key,
    pharmaId        varchar(6) pharma_fk foreign key, 
    amount      varchar(10), 
    drug        varchar(20) 
);

--create sched table 
create table 'sched' table(
    schedId     varchar(6) sched_pk primary key,
    schedType   char(1) --come back to this one
); 


--create staff sched table
create table 'staffSched' table(
    staffSchedID    number(4) staffSched_pk primary key,
    staffID         char(3) staffID_fk foreign key, 
    officeAdminID   number(10) officeAdmin_fk foreign key
); 

--create patient sched table 
create table 'patientSched' table(
    patientID   varchar(6) patient_fk foreign key,
    patientSched    number(4) patientSched_pk primary key, 
    officeAdminID   number(10) officeAdmin_fk foreign key
); 
